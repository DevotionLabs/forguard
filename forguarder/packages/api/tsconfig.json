{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@logger": ["src/logger/index"],
      "@logger/*": ["src/logger/*"],
      "@server": ["src/server/index"],
      "@server/*": ["src/server/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
